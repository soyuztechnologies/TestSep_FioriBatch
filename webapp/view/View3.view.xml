<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 
          xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
          xmlns:viz="sap.viz.ui5.controls" xmlns:layout="sap.ui.layout"
          xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
         controllerName="ats.fin.ar.controller.View3">
    <Page title="Supplier Data" showNavButton="true" navButtonPress="onBack">
        <!-- <Button text="Back" press="onBack"></Button> -->
        <content>
            <ObjectHeader title="{name}" intro="{sinceWhen}" 
            number="{contactNo}" numberUnit="{contactPerson}" icon="sap-icon://supplier">
            </ObjectHeader>
            <Select id="idCharts" selectedKey="{/chartType}">
                <core:Item key="bar" text="bar"></core:Item>
                <core:Item key="column" text="column"></core:Item>
                <core:Item key="line" text="line"></core:Item>
                <core:Item key="pie" text="pie"></core:Item>
            </Select>
            <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}"
                height='100%' width="100%" vizType='{/chartType}'>
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{suppFruits}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="Fruit Name"
                                value="{name}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="Quantity Sold"
                                value="{quantity}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>
                <viz:feeds>
                    <viz.feeds:FeedItem id='valueAxisFeed' uid="valueAxis" type="Measure"
                        values="Quantity Sold" />
                    <viz.feeds:FeedItem uid="categoryAxis" type="Dimension"
                        values="Fruit Name" />
                </viz:feeds>
            </viz:VizFrame>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer></ToolbarSpacer>
           </Toolbar>
        </footer>
    </Page>
</mvc:View>
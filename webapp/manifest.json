{
    "_version": "1.37.0",
    "sap.app":{
        "id":"ats.fin.ar",
        "type": "application",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "ach": "FIN-ACC-AR",
        "title": "{{appTitle}}",
        "description": "{{appDescription}}",
        "i18n": "i18n/i18n.properties",
        "dataSources": {
            "anubhavService":{
                "type": "OData",
                "uri": "/sap/opu/odata/sap/ZAUG_ODATA_SRV/",
                "settings": {
                    "odataVersion": "2.0"
                }
            }
        }
    },
    "sap.ui": {
        "fullWidth": true,
        "deviceTypes":{
            "desktop": true,
            "tablet": true,
            "phone": true
        },
        "supportedThemes": ["sap_fiori_3","sap_fiori_3_dark","sap_horizon","sap_horizon_dark"],
        "technology": "UI5"
    },
    "sap.ui5":{
        "dependencies": {
            "minUI5Version": "1.96.0",
            "libs": {
                "sap.ui.core": {},
                "sap.m": {},
                "sap.viz": {}
            }
        },
        "resources": { 
            "css": [{"uri": "css/style.css"}]
        },
        "contentDensities": {"compact": true,"cozy": true},
        "rootView":{
            "viewName": "ats.fin.ar.view.App",
            "id": "idRoot",
            "type": "XML"
        },
        "routing": {
            "config": {
                "routerClass": "sap.m.routing.Router",
                "viewPath": "ats.fin.ar.view",
                "viewType": "XML",
                "controlId": "idAppCon"
            },
            "routes": [{
                "name": "spiderman",
                "pattern": "",
                "target":["joe","biden"]
            },{
                "name": "superman",
                "pattern": "fruits/{fruitId}",
                "target":["joe","putin"]
            },{
                "name": "suppl",
                "pattern": "supplier/{supplierId}",
                "target":["joe","modi"]
            },{
                "name": "add",
                "pattern": "AddProduct",
                "target":["joe","macron"]
            }],
            "targets": {
                "joe": {
                    "viewName": "View1",
                    "viewId": "idV1",
                    "controlAggregation": "masterPages"
                },
                "biden": {
                    "viewName": "Empty",
                    "viewId": "idEmpty",
                    "controlAggregation": "detailPages"
                },
                "putin": {
                    "viewName": "View2",
                    "viewId": "idV2",
                    "controlAggregation": "detailPages"
                },
                "modi": {
                    "viewName": "View3",
                    "viewId": "idV3",
                    "controlAggregation": "detailPages"
                },
                "macron": {
                    "viewName": "Add",
                    "viewId": "idAdd",
                    "controlAggregation": "detailPages"
                }
            }            
        },
        "models": {
            "": {
                "type": "sap.ui.model.odata.v2.ODataModel",
                "dataSource": "anubhavService",
                "settings": {}
            },
            "local":{
                "type": "sap.ui.model.json.JSONModel",
                "uri": "model/mockdata/fruits.json",
                "preload": true
            },
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": {
                    "bundleUrl": "i18n/i18n.properties"
                },
                "preload": true
            }
        }
    }
}